<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inventory_activity_background"
    tools:context=".controllers.InventoryActivity">

    <TextView
        android:id="@+id/InventoryActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/app_inventory_name"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_inventory_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="10dp"
        android:width="200dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:padding="20dp"
        android:text="@string/app_inventory_btn_view"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/edit_inventory_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InventoryActivityTitle" />

    <Button
        android:id="@+id/edit_inventory_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="340dp"
        android:width="200dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:padding="20dp"
        android:text="@string/app_inventory_btn_edit"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_inventory_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>